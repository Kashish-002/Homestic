<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Details</h3>
    </div>
    <div class="card col-6 offset-3 show-cards">   
       <img src="<%=listings.image.url%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%=listings.title%></b><br>
            <%=listings.description%> <br>
            &#x20B9; <%=listings.price.toLocaleString('en-IN')%><br>
            <%=listings.location%> <br>
            <%=listings.country%>
        </p>
  </div> 
    </div>

    <div class="btns">
        <form method="GET" action="/listings/<%=listings._id%>/edit">
        <button class="btn btn-dark offset-3 edit-btn">Edit</button><br><br>
    </form>
     <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
    </div>
    
    </div>
 
</body>
