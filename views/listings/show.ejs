<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-3">
    <h3><b><%=listings.title%></b></h3>
    </div>
    <div class="card col-6 offset-3 show-cards listing-card">   
       <img src="<%=listings.image.url%>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
           
          <p class="card-text"><%=listings.description%></p> 
          <p class="card-text">&#x20B9; <%=listings.price.toLocaleString('en-IN')%></p>
          <p class="card-text"><%=listings.location%></p> 
          <p class="card-text"><%=listings.country%></p>
        
  </div> 
    </div>
    <%if(currUser && listings.owner._id.equals(currUser._id)){%>
    <div class="btns">
        <form method="GET" action="/listings/<%=listings._id%>/edit">
        <button class="btn btn-dark offset-3 edit-btn">Edit</button><br><br>
    </form>
     <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark offset-3">Delete</button>
    </form>
    </div>
     <hr>
   <%}%>
   
    <div class="col-8 offset-3 mb-3">
      <% if(currUser) {%>
      <h4>Leave a review</h4>
      <form action="/listings/<%=listings.id%>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
           <div class="invalid-feedback">Please add some comments for review</div>
        </div>
       
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>
      <hr>
      <div class="row ">
        <%for(let review of listings.reviews){%>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username%></h5>
            <p class="card-text"><%= review.comment%></p>
            <p class="card-text"><%= review.rating%></p>
          </div>
          <form class="mb-3" method="Post" action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark ">Delete</button>
          </form>
        </div>
        <%}%>
      </div>
    </div>
    </div>
    
</body>
